#:import Thread threading

ScreenManager:
    CalendarWindow:
    DayWindow:
    HabitsWindow:
    SettingsWindow:
    CalendarLabels:

<MoodButton@Button>:
    background_normal: ''
    font_size: 25
    halign: 'center'
    valign: 'middle'
    padding: (15,15)
    text_size: self.size

<CalButton@Button>:
    date_id: None
    font_size: (self.height+self.width)/4
    testobr: 'dsfsdfs'
    color: (1,1,1,1) 
    outline_width: 1
    outline_colour: (0, 0, 0, 1)
    background_normal: ''
    markup:True
    text: ''
    doublemood: False
    colorset: (0,0,0,0)
    colorset2: (0,0,0,0)
    on_press: 
        app.root.get_screen('Calendar').schedule_long_cal_click(self.date_id, self.my_id)
    on_release:
        app.root.get_screen('Calendar').ulp_call_cal_click(self.date_id, self.my_id)
    canvas.before:
        Color: 
            rgba: self.colorset
        Triangle:
            points: self.x, self.y, self.x, self.top, self.right, self.top
        Color: 
            rgba: self.colorset2
        Triangle:
            points: self.x, self.y, self.right, self.y, self.right, self.top
        Color: 
            rgba: (1,1,1,.8)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height         

<DayLabel@Label>:
    font_size: (self.height+self.width)/4
    outline_width: 1
    outline_colour: (0, 0, 0, 1)
    canvas.before:
        Color: 
            rgba: (1,1,1,.8)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<MoveButton@Button>:


<DayWindow>:
    name: 'DayMood'
    current_date: ''
    setMoodNum: 1
    bgsource: ''
    bg: (0,0,0,.9)
    FitImage:
        id: bgImage5
        size_hint_y: 1
        source: root.bgsource
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,.3)
            MoveButton:
                text:'<'
                size_hint: (.2,1)
                on_release: root.move_day('backward', root.date_id, root.my_id)
            Label:
                id: question
                #size_hint_y: .8
                bg1: (1,1,1,0)
                bg2: (1,1,1,0)
                canvas.before:
                    Color:
                        rgba: 97/255,105/255,140/255,.55
                    Rectangle:
                        size: self.size
                        pos:self.pos
                canvas:
                    Color:
                        rgba: self.bg1
                    Rectangle:
                        size: self.size[0]/2,self.size[1]/5
                        pos:self.pos
                    Color:
                        rgba: self.bg2
                    Rectangle:
                        size: self.size[0]/2,self.size[1]/5
                        pos:self.pos[0]+self.size[0]/2,self.pos[1]
                color: (1,1,1,1)
                #outline_width: 1
                #outline_colour: (0, 0, 0, 1)
                font_size: 30
                line_height: 1.05
                halign: 'center'
                valign: 'top'
                text_size: self.size
                markup: True
                text: f'[b]Jaký byl tvůj den? \n {root.current_date}[/b]'
            MoveButton:
                text:'>'
                size_hint: (.2,1)
                on_release: root.move_day('forward', root.date_id, root.my_id)

        MDTextFieldRect:
            id: comment
            multiline: True
            text: ''
            input_type: 'text'
            keyboard_suggestions: True
            size_hint: (1, .7)
            #height: root.height/4
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .35)
            canvas.before:
                Color:
                    rgba: 97/255,105/255,140/255,.55
                Rectangle:
                    size: self.size
                    pos:self.pos
            FloatLayout:
                orientation: 'vertical'
                size_hint: (1, .9)
                Label:
                    text: 'Složitější nálada?'
                    font_size: 20
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    size_hint:1,.5
                    pos_hint: {'center_x': .5, 'center_y': .8}
                    #size: self.parent.width,self.parent.height/4
                MDCheckbox:
                    id: doubleMoodCheck
                    size_hint: None, None
                    size: "48dp", "48dp"
                    pos_hint: {'center_x': .5, 'center_y': .4}
                    on_active:
                        app.root.current_screen.double_mood(self.active)

           #MoodButton:
           #    id: terrible
           #    text: 'Katastrofa'
           #    on_release: app.root.current_screen.mood_click('terrible', comment.text)
           #    on_release: 
           #        app.root.transition.direction = 'right'
           #        app.root.current = 'Calendar'
            MoodButton:
                id: bad
                text: 'Na houby'
                on_release: app.root.current_screen.mood_click('bad', comment.text)
            MoodButton:
                id: average  
                text: 'Šedivý průměr'
                on_release: app.root.current_screen.mood_click('average', comment.text)
            MoodButton:
                id: good
                text: 'Užil(a) jsem si ho'
                on_release: app.root.current_screen.mood_click('good', comment.text)

            MoodButton:
                id: super
                text: 'Boží!'
                on_release: app.root.current_screen.mood_click('super', comment.text)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.2
            canvas.after:
                Color: 
                    rgba: (1,1,1,.8)
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height 
            Label:
                id:healthLabel
                #outline_width: 1
                #outline_colour: (0, 0, 0, 1)
                size_hint: .8,1
                font_size: 30
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                text: 'Jak ses tento den cítil fyzicky?'
                canvas.before:
                    Color:
                        rgba: 97/255,105/255,140/255,.55
                    Rectangle:
                        size: self.size
                        pos:self.pos
            Label:
                id:healthLabelValue
                questionMark: True
                size_hint: .2,1
                font_size: 40
                halign: 'center'
                valign: 'middle'
                markup: True
                healthvalue: str(int(root.ids.health.value))
