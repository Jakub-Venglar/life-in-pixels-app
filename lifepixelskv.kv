                    size: self.size
                    pos:self.pos
            #size: self.texture_size
            #pos: self.pos
            source: self.image_source
            #canvas.after:
            #    #Color:
            #    #    rgba: (1,1,1,1)
            #    Rectangle:
            #        texture: app.root.get_screen('CalLabels').ids.textOnImage.texture if app.root else None
            #        pos: self.pos

        #FloatLayout:
        #    Label:
        #        text: 'Kliknutim nahraj'
        #        pos: root.ids.dayImage.pos
        #        size:root.ids.dayImage.size

        Button:         
            text: 'Zavřít'
            size_hint: 1,.25
            on_press: 
                root.schedule_delete_day()
            on_release:
                root.unschedule_delete()
        
        

<SettingsWindow>:
    name: 'Settings'
    bg: (0,0,0,.9)
    settings: {}
    bgsource: ''
    FitImage:
        id: bgImage1
        size_hint_y: 1
        source: root.bgsource 
    BoxLayout:
        #size_hint: 1,1
        orientation: 'vertical'
        Label:
            text: 'Aktuální obrázek'
            font_size: 30
            size_hint_y: None
            height: 50
            canvas.before:
                Color:
                    rgba: root.bg
                Rectangle:
                    size: self.size
                    pos:self.pos
        Image:
            id: bgImage2
            canvas.before:
                Color:
                    rgba: root.bg
                Rectangle:
                    size: self.size
                    pos:self.pos
            size: self.texture_size
            pos: self.pos
            source: root.bgsource            
        Button:
            text: 'Vybrat obrázek na pozadí'
            size_hint_y: .2
            on_release:
                root.manager.current_screen.open_filemanager()
        Button:
            text: 'Uložit a zavřít'
            size_hint_y: .2
            on_release:
                root.manager.current_screen.save_settings()
                root.manager.transition.direction = 'right'
                root.manager.current = 'Calendar'

<HabitsWindow>:
    name: 'Habits'
    bg: (.5,.5,.5,.5)
    bgsource: ''
    canvas:
        Color:
            rgba: self.bg
        Rectangle:
            size: self.size
            pos:self.pos
    FitImage:
        id: bgImage3
        size_hint_y: 1
        source: root.bgsource
    BoxLayout:
        padding: [0,20,0,0]
        orientation: 'vertical'
        Label:
            id: actQuestion
            font_size: 30
            halign: 'center'
            valign: 'middle'
            height: root.height*.2
            text_size: self.size
            text: 'Tvé aktivity:'
        GridLayout:
            cols:2
            Label:
                text: 'Aktivita'
            Label:
                text: 'Zobrazení v kalendáři'
        TextInput:          
        Button:
            text: 'Přidat aktivitu'
        Button:
            text: 'Zavřít'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Calendar'

