<Label>:
    background_normal: ''
    font_size: 20
    background_color:(1,1,1,.2)
    canvas:
        Color: 
            rgba: self.background_color
        Rectangle: 
            size: self.size
            pos: self.pos
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
    canvas:
        Color: 
            rgba: (1,1,1,.8)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

