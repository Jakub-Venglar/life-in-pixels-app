<MoodButton@Button>:
    background_normal: ''
    font_size: 20
    halign: 'center'
    valign: 'middle'
    text_size: self.size

<ButtonLabel>
    markup: True
    label: ''
    text: '[b]' + self.label + '[/b]'
    font_size: self.parent.height*0.3 if self.parent else 20
    size_hint_x: None
    size_hint_y: None
    text_size: self.size
    size: (self.parent.width*.9, self.parent.height*0.97) if self.parent else (60,20)
    valign: 'top'
    halign: 'left'
    pos: (self.parent.pos[0]+self.width*0.05, self.parent.pos[1]) if self.parent else (10,10)

<CalButton@Button>:
    date_id: None
    font_size: (self.height+self.width)/4
    color: (1,1,1,1) 
    outline_width: 1
    outline_colour: (0, 0, 0, 1)
    background_normal: ''
    markup:True
    text: ''
    colorset: (12/255,84/255,179/255,.8)
    on_release: 
        app.root.get_screen('Calendar').cal_click(self.date_id, self.my_id)
    canvas.before:
        
        #Rectangle:
        #    source: self.pict_source
        #    size: (self.width/2, self.height/2)
        #    pos: self.pos
        Color: 
            rgba: self.colorset
        Ellipse:
            #angle_start: 20
            #angle_end: 320
            size: self.width/1.5, self.width/1.5 #if self.today == True else (0,0)
            pos: self.center_x - self.width/3, self.center_y - self.width/3
        Color: 
            rgba: (1,1,1,.8)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
        
<DayLabel@Label>:
    font_size: (self.height+self.width)/4
    canvas.before:
        Color: 
            rgba: (1,1,1,.8)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
<MoveButton@Button>:


<DayWindow>:
    name: 'DayMood'
    current_date: ''
    canvas.before:
    #Color: 
    #    rgba: (1,1,1,1)
        Rectangle:
            size: 3/2*root.height, root.height
            pos: self.width/2-3/2*root.height/2, self.height/2 - root.height/2
            source: ('pict/' + app.root.get_screen('Settings').bgsource)  if app.root else 'pict/default.jpg'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: question
            bg: (1,1,1,.5)
            canvas.before:
                Color:
                    rgba: self.bg
                Rectangle:
                    size: self.size
                    pos:self.pos
            color: (1,1,1,1)
            #outline_width: 1
            #outline_colour: (0, 0, 0, 1)
            font_size: 30
            halign: 'center'
            valign: 'middle'
            #size_hint_x: None
            text_size: self.size
            text: f'Jaký byl tvůj den {root.current_date} ?'
        TextInput:
            id: comment
            text: ''
            size_hint: (1, None)
            height: root.height/3
        BoxLayout:
            orientation: 'horizontal'
            MoodButton:
                id: terrible
                text: 'Katastrofa'
                on_press: app.root.current_screen.mood_click('terrible', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
            MoodButton:
                id: bad
                text: 'Na houby'
                on_press: app.root.current_screen.mood_click('bad', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
            MoodButton:
                id: average  
                text: 'Šedivý průměr'
                on_press: app.root.current_screen.mood_click('average', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
            MoodButton:
                id: good
                text: 'Užil(a) jsem si ho'
                on_press: app.root.current_screen.mood_click('good', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
            MoodButton:
                id: super
                text: 'Boží!'
                on_press: app.root.current_screen.mood_click('super', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
        Button:         
            text: 'Uložit jen text a zavřít'
            on_release: 
                app.root.current_screen.save_text(comment.text)
                app.root.transition.direction = 'right'
                app.root.current = 'Calendar'
        Button:         
            text: 'Vymazat vše o tomto dni'
            on_press: app.root.current_screen.delete_day(), #app.root.cal_click(app.root.date_id, app.root.my_id)
        Button:         
            text: 'Zavřít'
            on_release: 
                app.root.transition.direction = 'right' #both is working
                root.manager.current = 'Calendar' #both is working

<SettingsWindow>:
    name: 'Settings'
    bgsource: 'default.jpg'
    bg: (0,0,0,.9)
    FitImage:
        size_hint_y: 1
        source: ('pict/' + app.root.get_screen('Settings').bgsource)  if app.root else 'pict/default.jpg'
    
    BoxLayout:
        #size_hint: 1,1
        orientation: 'vertical'
        Label:
            text: 'Aktuální obrázek'
            font_size: 30
            size_hint_y: None
            height: 50
            canvas.before:
                Color:
                    rgba: root.bg
                Rectangle:
                    size: self.size
                    pos:self.pos
        Image:
            canvas.before:
                Color:
                    rgba: root.bg
                Rectangle:
                    size: self.size
                    pos:self.pos
            size: self.texture_size
            pos: self.pos
            source: 'pict/' + root.bgsource            
        Button:
            text: 'Vybrat obrázek na pozadí'
            size_hint_y: .2
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Calendar'
        Button:
            text: 'Uložit a zavřít'
            size_hint_y: .2
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Calendar'

<HabitsWindow>:
    name: 'Habits'
    bg: (.5,.5,.5,.5)
    canvas:
        Color:
            rgba: self.bg
        Rectangle:
            size: self.size
            pos:self.pos
    FitImage:
        size_hint_y: 1
        source: ('pict/' + app.root.get_screen('Settings').bgsource)  if app.root else 'pict/default.jpg'
    BoxLayout:
        padding: [0,20,0,0]
        orientation: 'vertical'
        Label:
            id: actQuestion
            font_size: 30
            halign: 'center'
            valign: 'middle'
            height: root.height*.2
            text_size: self.size
            text: 'Tvé aktivity:'
        GridLayout:
            cols:2
            Label:
                text: 'Aktivita'
            Label:
                text: 'Zobrazení v kalendáři'
        TextInput:          
        Button:
            text: 'Přidat aktivitu'
        Button:
            text: 'Zavřít'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Calendar'

