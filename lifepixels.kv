<MoveButton@Button>:

<MoodPopup@Popup>:
    id: MoodPopup2
    auto_dismiss: True
    name: 'MoodPopup'
    size_hint: .8,.8
    title: f'Jaký byl tvůj den {root.current_date} ?'
    current_date: ''
    title_size: 20
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: comment
            text: ''
            size_hint: (1, None)
            height: root.height/3
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: bad
                background_normal: ''
                backgroud_color: (1,1,1,1)       
                text: 'Na houby'
                on_press: app.root.mood_click('bad', comment.text)
                on_release: root.dismiss()
            Button:
                id: average
                background_normal: ''
                backgroud_color: (1,1,1,1)
                multiline: True                    
                text: 'Šedivý průměr'
                on_press: app.root.mood_click('average', comment.text)
                on_release: root.dismiss()
            Button:
                id: good
                background_normal: ''
                backgroud_color: (1,1,1,1)             
                text: 'Užil(a) jsem si ho'
                on_press: app.root.mood_click('good', comment.text)
                on_release: root.dismiss()
            Button:
                id: super
                background_normal: ''
                backgroud_color: (1,1,1,1)
                text: 'Boží!'
                on_press: app.root.mood_click('super', comment.text)
                on_release: root.dismiss()
        Button:         
            text: 'Uložit jen text a zavřít'
            on_release: app.root.save_text(comment.text), root.dismiss()
        Button:         
            text: 'Vymazat vše o tomto dni'
            on_press: app.root.delete_day(), root.dismiss(), app.root.cal_click(app.root.date_id, app.root.my_id)
        Button:         
            text: 'Zavřít'
            on_release: root.dismiss(),



<DayWindow>:
    name: 'DayMood'
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: comment
            text: ''
            size_hint: (1, None)
            height: root.height/3


<CalendarWindow>:
    name: 'Calendar'
    yearID: ''
    monthID: ''
    dateToShow: ''
    canvas:
        Color: 
            rgba: (1,1,1,1)
        Rectangle:
            size: 3/2*root.height, root.height
            pos: self.width/2-3/2*root.height/2, self.height/2 - root.height/2
            source: 'pict/norsko.jpg'
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: .9, .2
            pos_hint: {'center_x': .5}
            canvas.before:
                Color: 
                    rgba: (53/255,85/255,166/255,.65)
                Rectangle:
                    size: self.size
                    pos:self.pos
            MoveButton:
                text:'<<<'
                on_press: root.move_year('backward')
            MoveButton:
                text:'<'
                on_press: root.move_month('backward')
            Label:
                id: month_Label
                text: ''
                halign: 'center'
                valign: 'middle'
                size_hint_x: None
                text_size: self.size
                width: root.width/2
                font_size: 40
            MoveButton:
                text:'>'
                on_press: root.move_month('forward')
            MoveButton:
                text:'>>>'
                on_press: root.move_year('forward')
        BoxLayout:
            orientation: 'horizontal'
            size_hint: .9, .2
            pos_hint: {'center_x': .5}
            canvas.before:
                Color: 
                    rgba: (53/255,85/255,166/255,.65)
                Rectangle:
                    size: self.size
                    pos:self.pos
            DayLabel:
                text: 'Po'
            DayLabel:
                text: 'Út'
            DayLabel:
                text: 'St'
            DayLabel:
                text: 'Čt'
            DayLabel:
                text: 'Pá'
            DayLabel:
                text: 'So'
            DayLabel:
                text: 'Ne'
        GridLayout:
