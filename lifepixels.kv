#:import Factory kivy.factory.Factory


<CalButton@Button>:
    newsize: 30
    font_size: self.newsize
    newTextColor: (1,1,1,1) 
    color: self.newTextColor
    newOutWidth: 0
    outline_width: self.newOutWidth
    outline_colour: (0, 0, 0, 1)
    background_normal: ''
    newBG: (1,1,1,.25)
    background_color: self.newBG
    canvas.before:
        Color: 
            rgba: (1,1,1,.8)
        Rectangle:
            size: 50, 50
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<MoodPopup@Popup>:
    auto_dismiss: True
    size_hint: .5,.5
    title: 'Hola'
    BoxLayout:
        orientation: 'horizontal'
        Button:         
            text: 'Na houby'
            on_press: app.root.pop_click('bad')
            on_release: root.dismiss()
        Button:         
            text: 'Šeď'
            on_press: app.root.pop_click('average')
            on_release: root.dismiss()
        Button:         
            text: 'Dobre'
            on_press: app.root.pop_click('good')
            on_release: root.dismiss()
        Button:         
            text: 'Bozi'
            on_press: app.root.pop_click('super')
            on_release: root.dismiss()
        Button:         
            text: 'close'
            on_release: root.dismiss()

