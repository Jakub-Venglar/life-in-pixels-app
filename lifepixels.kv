<DayWindow>:
    name: 'DayMood'
    current_date: ''
    canvas.before:
    #Color: 
    #    rgba: (1,1,1,1)
        Rectangle:
            size: 3/2*root.height, root.height
            pos: self.width/2-3/2*root.height/2, self.height/2 - root.height/2
            source: 'pict/norsko.jpg'
    BoxLayout:
        orientation: 'vertical'
        Label:
            canvas.before:
                Color:
                    rgba: (1,1,1,.5)
                Rectangle:
                    size: self.size
                    pos:self.pos
            id: question
            color: (0,0,0,1)
            font_size: 30
            halign: 'center'
            valign: 'middle'
            #size_hint_x: None
            text_size: self.size
            text: f'Jaký byl tvůj den {root.current_date} ?'
        TextInput:
            id: comment
            text: ''
            size_hint: (1, None)
            height: root.height/3
        BoxLayout:
            orientation: 'horizontal'
            MoodButton:
                id: bad
                text: 'Na houby'
                on_press: app.root.current_screen.mood_click('bad', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
            MoodButton:
                id: average  
                text: 'Šedivý průměr'
                on_press: app.root.current_screen.mood_click('average', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
            MoodButton:
                id: good
                text: 'Užil(a) jsem si ho'
                on_press: app.root.current_screen.mood_click('good', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
            MoodButton:
                id: super
                text: 'Boží!'
                on_press: app.root.current_screen.mood_click('super', comment.text)
                on_release: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'Calendar'
        Button:         
            text: 'Uložit jen text a zavřít'
            on_release: 
                app.root.current_screen.save_text(comment.text)
                app.root.transition.direction = 'right'
                app.root.current = 'Calendar'
        Button:         
            text: 'Vymazat vše o tomto dni'
            on_press: app.root.current_screen.delete_day(), #app.root.cal_click(app.root.date_id, app.root.my_id)
        Button:         
            text: 'Zavřít'
            on_release: 
                app.root.transition.direction = 'right' #both is working
                root.manager.current = 'Calendar' #both is working


<CalendarWindow>:
    fs: 20 #size of symbols in calendar, set by bind
    name: 'Calendar'
    yearID: ''
    monthID: ''
    dateToShow: ''
    canvas:
        #Color: 
        #    rgba: (1,1,1,1)
        Rectangle:
            size: 3/2*root.height, root.height
            pos: self.width/2-3/2*root.height/2, self.height/2 - root.height/2
            source: 'pict/norsko.jpg'
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: .9, .2
            pos_hint: {'center_x': .5}
            canvas.before:
                Color: 
                    rgba: (53/255,85/255,166/255,.65)
                Rectangle:
                    size: self.size
                    pos:self.pos
            MoveButton:
                text:'<<<'
                on_press: root.move_year('backward')
            MoveButton:
                text:'<'
                on_press: root.move_month('backward')
            Label:
                id: month_Label
                text: ''
                halign: 'center'
                valign: 'middle'
                size_hint_x: None
                text_size: self.size
                width: root.width/2
                font_size: 40
            MoveButton:
                text:'>'
                on_press: root.move_month('forward')
            MoveButton:
                text:'>>>'
                on_press: root.move_year('forward')
        BoxLayout:
            orientation: 'horizontal'
            size_hint: .9, .2
            pos_hint: {'center_x': .5}
            canvas.before:
