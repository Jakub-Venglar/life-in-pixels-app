        Color: 
            rgba: (1,1,1,1)
        Rectangle:
            size: 3/2*root.height, root.height
            pos: self.width/2-3/2*root.height/2, self.height/2 - root.height/2
            source: 'pict/norsko.jpg'
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
