#:import Factory kivy.factory.Factory

<CalButton@Button>:
    background_normal: ''
    font_size: 30
    background_color:(1,1,1,.2)
    canvas:
        Color: 
            rgba: self.background_color
        Rectangle: 
            size: self.size
            pos: self.pos
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
    canvas:
        Color: 
            rgba: (1,1,1,.8)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<MoodPopup@Popup>:
    auto_dismiss: True
    size_hint: .5,.5
    title: 'Hola'
    BoxLayout:
        orientation: 'horizontal'
        Button:         
            text: ':)'
        Button:         
            text: '/'
        Button:         
            text: 'close'
            on_release: root.dismiss()

<LifeLayout>:
    canvas:
        Color: 
            rgba: (1,1,1,1)
        Rectangle:
            size: 3/2*root.height, root.height
            pos: self.width/2-3/2*root.height/2, self.height/2 - root.height/2
            source: 'pict/norsko.jpg'
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
